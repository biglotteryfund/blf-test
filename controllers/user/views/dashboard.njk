{% extends "layouts/main.njk" %}
{% from "components/section-links/macro.njk" import sectionLinks %}
{% from "components/user-navigation/macro.njk" import userNavigation with context %}

{% block content %}
    <main role="main" id="content">
        <div class="content-box u-inner-wide-only">

            {{ userNavigation(userNavigationLinks) }}

            <h1 class="t--underline">{{ title }}</h1>

            <div class="user-nav__primary">
                <p class="user-nav__text">
                    {{ __('user.common.loggedInAs') }} <strong>{{ user.userData.username }}</strong>
                </p>
            </div>

            {% if alertMessage %}
                <div class="message" role="alert">
                    {{ alertMessage }}
                </div>
            {% endif %}

            <div class="u-margin-bottom">
                {{ sectionLinks(__('user.dashboard.sectionLinks')) }}
            </div>
        </div>
    </main>
{% endblock %}
